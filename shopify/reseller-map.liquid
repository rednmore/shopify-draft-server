<div class="page-width" style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">
  <h2 class="title h2" style="text-align: center;">{{ section.settings.heading }}</h2>

  <div
    style="
      filter: grayscale(80%);
      border: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
      padding: {{ section.settings.padding }}px;
      box-sizing: border-box;
    "
  >
    <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4190.925500346065!2d6.681996977407224!3d46.50272597110994!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478c2fe31b808cd1%3A0x87f0e764597bb2af!2sLunetier%20de%20la%20Couronne!5e1!3m2!1sfr!2sch!4v1746638969012!5m2!1sfr!2sch"
    
      style="
        display: block;
        width: 100%;
        height: {{ section.settings.map_height }}px;
        border: none;
        box-sizing: border-box;
      "
      loading="lazy"
      allowfullscreen
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </div>
</div>

{% schema %}
{
  "name": "Reseller Map",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "Find Our Resellers"
    },
    {
      "type": "url",
      "id": "map_url",
      "label": "Google Map embed URL"
    },
    {
      "type": "range",
      "id": "map_height",
      "label": "Map height (px)",
      "min": 200,
      "max": 1000,
      "step": 20,
      "default": 480
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding around map (px)",
      "min": 0,
      "max": 80,
      "step": 4,
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top margin (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 64
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom margin (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 64
    },
    {
      "type": "range",
      "id": "border_thickness",
      "label": "Border thickness (px)",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Reseller Map",
      "category": "Custom"
    }
  ]
}
{% endschema %}
