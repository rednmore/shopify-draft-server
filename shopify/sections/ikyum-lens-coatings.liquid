{% assign ai_gen_id = section.id %}

{% style %}
  .ai-lens-coatings-{{ ai_gen_id }} {
    padding: {{ section.settings.section_padding }}px 20px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  .ai-lens-coatings-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-lens-coatings-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ section.settings.header_spacing }}px;
  }

  .ai-lens-coatings-title-{{ ai_gen_id }} {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-lens-coatings-subtitle-{{ ai_gen_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-lens-coatings-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ section.settings.card_spacing }}px;
    margin-top: {{ section.settings.grid_spacing }}px;
  }

  .ai-lens-coating-card-{{ ai_gen_id }} {
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    box-shadow: 0 4px 12px rgba(0,0,0,.1);
    transition: transform .3s ease, box-shadow .3s ease;
    border: 1px solid {{ section.settings.card_border_color }};
  }
  .ai-lens-coating-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,.15);
  }

  /* HERO (image de tête) : pleine largeur, hauteur ajustable */
  .ai-lens-coating-icon-{{ ai_gen_id }} {
    width: 100%;
    height: {{ section.settings.hero_height }}px;
    margin: 0 0 16px;
    display: block;
    background-color: {{ section.settings.icon_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
  }
  .ai-lens-coating-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  /* Placeholder centré si pas d’image fournie */
  .ai-lens-coating-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display:flex; align-items:center; justify-content:center;
    background-color: {{ section.settings.icon_background }};
  }
  .ai-lens-coating-icon-placeholder-{{ ai_gen_id }} svg {
    width: {{ section.settings.icon_size }}px;
    height: auto;
    color: {{ section.settings.icon_color }};
    opacity: .7;
  }

  .ai-lens-coating-name-{{ ai_gen_id }} {
    font-size: {{ section.settings.coating_name_size }}px;
    font-weight: 700;
    color: {{ section.settings.coating_name_color }};
    margin: 8px 0 12px;
    text-align: center;
  }
  .ai-lens-coating-tagline-{{ ai_gen_id }} {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.tagline_color }};
    margin: 0 0 16px;
    text-align: center;
    font-weight: 500;
  }
  .ai-lens-coating-description-{{ ai_gen_id }} {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
    margin: 0;
    text-align: center;
  }

  @media (max-width: 768px) {
    .ai-lens-coatings-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.card_spacing | times: 0.75 }}px;
    }
    .ai-lens-coating-card-{{ ai_gen_id }} {
      padding: {{ section.settings.card_padding | times: 0.8 }}px;
    }
    .ai-lens-coatings-title-{{ ai_gen_id }} {
      font-size: {{ section.settings.title_size | times: 0.85 }}px;
    }
  }
  @media (max-width: 480px) {
    .ai-lens-coatings-{{ ai_gen_id }} {
      padding: {{ section.settings.section_padding | times: 0.7 }}px 16px;
    }
  }
{% endstyle %}

